<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@color/item_background"
    android:orientation="vertical"
    android:padding="7dp">

    <TextView
        android:id="@+id/competition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Чемпионат России"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/competition_kind_of_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:text="Баскетбол"
        android:textColor="@color/sportsman_kind_of_sport"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/competition_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="РФ, г. Воронеж"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/competition_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="23.11.2017"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>